#include<stdio.h>
int main()
{
	int i,size;
	printf("enter the number of array\n");
	scanf("%d",&size);
	int a[size];
	printf("enter the numbers to seperate even and odd\n");
	for(i=0;i<size;i++)
	{
		scanf("%d",&a[i]);
	}
	printf("even numbers are:\n");
	for(i=0;i<size;i++)
	{
		if(a[i]>=0)
		{
			if(a[i]%2==0)
			{
				printf("%d\n",a[i]);
			}
		}
}
printf("odd numbers are:\n");
for(i=0;i,size;i++)
{
	if(a[i]>=0)
	{
		if(a[i]%2==1)
		{
			printf("%d",a[i]);
		}
	}
}
}
